{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Plumise Agent",
  "version": "0.1.7",
  "identifier": "com.plumise.agent",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Plumise Agent",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self' http://localhost:* http://127.0.0.1:* https://node-1.plumise.com https://github.com ipc: tauri:; object-src 'none'; base-uri 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/plumise-agent"],
    "windows": {
      "nsis": {
        "languages": ["English"],
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": ["https://github.com/mikusnuz/plumise-agent-app/releases/latest/download/latest.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNGMTAwODRDNjY3MjU4QkMKUldTOFdISm1UQWdRUDNGM0diM0N5OUN2MVpqRGdYcDZYRmJvVENZaldIQ0F2b0NKUWg5ZFM2R2kK"
    }
  }
}
